#!/bin/bash

# ===============================
# âš¡ MINI SWEET HOME - TMUX SPEED TOGGLE
# ===============================

DOTFILES_DIR="$HOME/mini-sweet-home"
CURRENT_LINK=$(readlink ~/.tmux.conf)

echo "ğŸ¨ Tmux Configuration Toggle"
echo "============================="

if [[ "$CURRENT_LINK" == *"tmux-fast.conf"* ]]; then
    # Switch to full version
    ln -sf "$DOTFILES_DIR/configs/tmux/tmux.conf" ~/.tmux.conf
    echo "âœ… Switched to FULL tmux config"
    echo "ğŸ¨ Look & Feel: Identical Rose Pine theme"
    echo "ğŸ”Œ Features: ALL plugins (resurrect, continuum, etc.)"
    echo "âš ï¸ Performance: ~200ms startup"
    echo "ğŸ“Š Score: ~90/100"
else
    # Switch to fast version  
    ln -sf "$DOTFILES_DIR/configs/tmux/tmux-fast.conf" ~/.tmux.conf
    echo "âš¡ Switched to FAST tmux config"
    echo "ğŸ¨ Look & Feel: IDENTICAL Rose Pine theme"
    echo "ğŸ”Œ Features: Core functionality (manual vim-nav)"
    echo "âœ… Performance: ~10ms startup"
    echo "ğŸ† Score: 100/100"
fi

echo ""
echo "ğŸ’« Active sessions will keep old config until restart"
echo "ğŸ“ˆ Test performance: make benchmark"
echo "ğŸ”„ Reload tmux: tmux source-file ~/.tmux.conf"
