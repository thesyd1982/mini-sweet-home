#!/bin/bash

# ===============================
# üß™ TEST CONFIGS V4
# ===============================

echo "üß™ Tests de validation des configurations..."

# Test ZSH config
echo "üêö Test configuration ZSH..."
if zsh -n ~/.zshrc; then
    echo "  ‚úÖ Syntaxe ZSH valide"
else
    echo "  ‚ùå Erreur de syntaxe ZSH"
    exit 1
fi

# Test tmux config
echo "ü™ü Test configuration tmux..."
if tmux -f ~/.tmux.conf list-sessions >/dev/null 2>&1; then
    echo "  ‚úÖ Configuration tmux valide"
else
    echo "  ‚ùå Erreur configuration tmux"
fi

# Test Git config
echo "üêô Test configuration Git..."
if git config --list >/dev/null 2>&1; then
    echo "  ‚úÖ Configuration Git valide"
else
    echo "  ‚ùå Erreur configuration Git"
fi

# Test Neovim config
echo "üìù Test configuration Neovim..."
if nvim --headless -c "checkhealth" -c "quit" >/dev/null 2>&1; then
    echo "  ‚úÖ Configuration Neovim valide"
else
    echo "  ‚ö†Ô∏è V√©rifiez la configuration Neovim manuellement"
fi

echo "‚úÖ Tests de configuration termin√©s"
